<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context="com.example.shang.cmput301_assign_1.viewDetailActivity">

    <EditText
        android:id="@+id/editText_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"/>

    <EditText
        android:layout_width="162dp"
        android:layout_height="44dp"
        android:layout_marginEnd="47dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_title"
        android:id="@+id/editText_count"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/detail_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/sub_title_name"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp" />

    <TextView
        android:id="@+id/detail_sub_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="41dp"
        android:text="@string/sub_title_currcount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_title"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/detail_sub_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/sub_title_defaultval"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_count" />

    <EditText
        android:id="@+id/editText_default"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginEnd="47dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_count" />

    <TextView
        android:id="@+id/detail_sub_description"
        android:layout_width="86dp"
        android:layout_height="17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        android:text="@string/sub_title_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_default"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="56dp"
        android:layout_height="33dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#ffffff"
        android:onClick="deleteItem"
        android:text="@string/btn_delete"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/detail_sub_description" />

    <Button
        android:id="@+id/button5"
        android:layout_width="56dp"
        android:layout_height="33dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#ffffff"
        android:onClick="applyChanges"
        android:text="@string/btn_apply"
        android:textColor="#000cba"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_sub_description" />

    <TextView
        android:id="@+id/date_detail"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="157dp"
        android:textSize="12sp"
        android:textColor="@android:color/background_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_sub_description"/>

</android.support.constraint.ConstraintLayout>
